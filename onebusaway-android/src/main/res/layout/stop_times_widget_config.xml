<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/config_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="?android:colorBackground">

    <!-- Title -->
    <TextView
            android:id="@+id/config_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add bus stop widget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

    <!-- Stop selector -->
    <TextView
            android:id="@+id/stop_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus stop"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

    <Button
            android:id="@+id/select_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select stop" />

    <!-- Selected stop preview -->
    <TextView
            android:id="@+id/selected_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No stop selected"
            android:textSize="13sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginTop="6dp" />

    <!-- Widget name -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Widget name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp" />

    <EditText
            android:id="@+id/widget_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Enter a name for this widget" />

    <!-- Routes -->
    <TextView
            android:id="@+id/routes_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Routes"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp" />

    <TextView
            android:id="@+id/routes_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading routesâ€¦"
            android:textSize="13sp"
            android:textColor="?android:textColorSecondary"
            android:visibility="gone" />

    <com.google.android.material.chip.ChipGroup
            android:id="@+id/route_chips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:chipSpacingHorizontal="6dp"
            app:chipSpacingVertical="6dp" />

    <!-- Spacer -->
    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <!-- Save button -->
    <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add widget" />

</LinearLayout>
